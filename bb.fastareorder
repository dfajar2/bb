sub replacewith { my ( $text ) = @_;
############################################################
  if ( defined $replace )
    {
      if ( length($replace) == 0 )
        { die "Error, --replace string is zero length\n"; }
      if ( length($with//"") )
        { $text =~ s/$replace/$with/; }
      else  # delete
        { $text =~ s/$replace//; }
    }
